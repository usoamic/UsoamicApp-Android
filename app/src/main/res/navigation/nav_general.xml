<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_general"
    app:navGraph="@id/startFragment"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="io.usoamic.wallet.ui.main.start.StartFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_start" />

    <fragment
        android:id="@+id/authFragment"
        android:name="io.usoamic.wallet.ui.main.auth.AuthFragment"
        android:label="@string/auth_fragment_title"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_createFragment"
            app:destination="@id/createFragment" />
        <action
            android:id="@+id/action_authFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>

    <fragment
        android:id="@+id/addFragment"
        android:name="io.usoamic.wallet.ui.main.add.AddFragment"
        android:label="@string/add_fragment_title"
        tools:layout="@layout/fragment_add">

        <action
            android:id="@+id/action_addFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>

    <fragment
        android:id="@+id/createFragment"
        android:name="io.usoamic.wallet.ui.main.create.CreateFragment"
        android:label="@string/add_fragment_title"
        tools:layout="@layout/fragment_create">
        <action
            android:id="@+id/action_createFragment_to_addFragment"
            app:destination="@id/addFragment"
            app:popUpTo="@+id/authFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/walletFragment"
        android:name="io.usoamic.wallet.ui.main.add.AddFragment"
        tools:layout="@layout/fragment_wallet" />

</navigation>